<!-- To avoid "moving items" (default sort order in Rails.) -->
<% @sorted_items = @cart.product_items.order(:product_id, :size_id) %>
<% @sorted_items.each do|item| %>
   <ul>
    <li>
     <%= link_to 'x', item, method: :delete, data: { confirm: 'You sure?' } %> -
     <%= item.quantity %>&times;<%= item.product.title %> =
     <%= number_to_currency item.total_price %> - <%=item.size.name %> <%=item.size.name.last %>

        <%= link_to "+", product_items_add_path(item.id), method: :post %>
        <%= link_to "-", product_items_reduce_path(item.id), method: :post %>
    </li>
   </ul>

<% end %>

