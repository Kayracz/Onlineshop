<%= render "shared/header" %>

<!-- filters -->
<input type="hidden" id="subcat" value="kids"/>

  <div class="container-fluid categorybar">
<%= link_to 'Todo', kids_path %>&nbsp;
<% Category.where(display_in_kids: true).each do |cat| %>
<%= link_to cat.name, kids_path(category: cat.name)%>
<% end %>
&nbsp;
  </div>


  <div class="container-fluid" style="margin-top:2%;">
        <%= image_tag "aqua3.png" %>
       </div>
     </div>


 <!-- trytwofrontend -->
<div class="container" style="margin-top:5%; ">
<h4 class="titulo text-center"> Selección Niños </h4>
<br>

<p class="titulo2">ver todos</p>
<hr class="sabana-line"></hr>

<div class="quantityproducts pagination2"><%== pagy_nav(@pagy) %>&nbsp; Productos ( <%= @kids_product_items.count %> )
</div>


<div class="categories" style="display:inline-block;">


</div>

<br>
</div>

<!-- filters -->
<%= render "shared/filters" %>
<%= link_to "Limpiar Filtros", products_clear_filters_path("kids") %>

<div class="container">
<!-- productos -->
    <div class="row">
  <% @kids_product_items.each do |product| %>
        <div class="col-md-3">

            <div class="product-grid2">
                <div class="product-image2">
                    <a><%= cl_image_tag product.photo %></a>
                    <ul class="social">
                        <li><a href="#" data-tip="Quick View"><i class="fa fa-eye"></i></a></li>
                        <li><a href="#" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="product-content">
                    <h3 class="title"><a href="#"><%= link_to product.title, product %></a></h3>
                       <% if product.sale_price == 0 %>
                    <p style="font-size:12px;"><%= number_to_currency_bo product.price %></p>
                    <% else %>
                    <p style="display: inline-block; font-size: 12px;"><i style="text-decoration: line-through;"><%= number_to_currency_bo product.sale_price %></i>&nbsp;&nbsp;<b style="font-weight: 600;"><%= number_to_currency_bo product.price %></b></p>
                     <% end %>
                </div>
            </div>
        </div>
   <% end %>
</div>
</div>
</div>
</div>
 <hr>
</div>



