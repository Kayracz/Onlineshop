<%= render "shared/header" %>
<div class="wrapper">
   <div class="main zoomImg">
      <% cache do %>
      <%= cl_image_tag @product.photo %>
      <% @product.photos.each do |photo| %>
      <a style=" height: 200px; width: 98%;
         "> <%= cl_image_tag photo.photo %></a>
      </a>
      <% end %>
      <% end %>
   </div>


   <div class="sidebar text-center">
      <h1><%= @product.title %></h1>
      <p class="titulo" style="font-size:12px;">Codigo:<%= @product.codigo %></p>
      <p class="titulo" style="font-size:12px;">Color: Negro<%= @product.color %></p>
      <% if @product.sale_price == 0 %>
      <p class="titulo2" style="font-size:14px"><%= number_to_currency_bo @product.price %></p>
      <% else %>
      <span>
      <p class="titulo2" style="font-size:14px; text-decoration: line-through; display: inline-block;"><%= number_to_currency_bo @product.sale_price %></p><p class="titulo2" style="font-size:14px; color: #ce1414; display: inline-block;">&nbsp;&nbsp;<%= number_to_currency_bo @product.price %></p>
      </span>
      <% end %>
   <hr>

    <%= label_tag :size_id, 'Seleciona tu talle' %>
     <%= form_tag product_items_path(product_id: @product.id) do %>
    <%= select_tag :size_id,
        options_for_select(Size.options_for(@product.id), @product.size),
        prompt: "Seleciona tu talle" %>

      <br>


      <button class="btn btn-danger ">
      <i class="fa fa-shopping-cart"></i>
      Añadir al carrito
      </button>
      <br>
      <hr>

 <div class="text-left">
  <div class='toggle'>
  <div class='tabs'>
    <div class='tab active'>Descripcion</div>
    <div class='tab'>Composicion</div>
    <div class='tab'>Cuidados</div>
  </div>
  <div class='panels1'>
    <div class='panel1'><%= @product.description %></div>
    <div class='panel1'>60% Algodón 37% Poliester 3% Spdx</div>
    <div class='panel1'> Limpieza a seco </div>
  </div>
</div>
</div>
      <%end%>

<div class="other-details postop20">
<a class="col-md-3 col-xs-6 text-center" href="#">
